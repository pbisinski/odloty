<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/navigation_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigator"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/darkmode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_first" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/smoky_black"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigator"
            app:layout_constraintTop_toBottomOf="@id/navigation_container" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{state.text}"
            android:textSize="@dimen/text_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <git.pbisinski.odloty.view.BottomNavigator
            android:id="@+id/bottom_navigator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:tabs="@{viewModel.bottomTabs}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="state"
            type="git.pbisinski.odloty.view.screen.dashboard.DashboardState" />

        <variable
            name="viewModel"
            type="git.pbisinski.odloty.view.screen.dashboard.DashboardViewModel" />
    </data>
</layout>