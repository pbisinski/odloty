<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardViewStyle">@style/CardView.Rounded.Light</item>
    </style>
    <style name="CardView.Rounded" parent="CardView">
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="useCompatPadding">true</item>
    </style>
    <style name="CardView.Rounded.Light" parent="CardView.Rounded">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardShadowColor">@color/lightBlue</item>
    </style>

    <style name="Button" />

    <style name="Button.BottomNavigation" parent="Text.Light">
        <item name="android:textColor">@color/selector_bottom_navigate_button_text_color</item>
        <item name="android:background">@color/platinium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Text" />

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Light">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

</resources>